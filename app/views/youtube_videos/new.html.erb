<div class='container'>
  <section class='header'>
    <h2 class='title'>Add a podcast</h1>
  </section>
  <!-- 
  <%= form_tag("youtube_videos#create", method: "post") do %>
    <%= label_tag(:video_id, "Video ID:") %>
    <%= text_field_tag(:video_id) %>
    <%= submit_tag("Add Video") %>
  <% end %>
  -->
  <%= form_for(@youtube_video) do |f| %>
    <%= f.label "Video ID" %>
    <%= f.text_field :youtube_id %>
    <%= f.label "Podcast Title" %>
    <%= f.text_field :title %>
    <%= f.submit "Add video" %>
  <% end %>

  <table class="u-full-width">
    <thead>
      <tr>
        <th>Title</th>
        <th>Youtube ID</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @videos.each do |video| %>
        <tr>
          <td><%= video.title %></td>
          <td><%= video.youtube_id %></td>
          <td><%= video.created_at %></td>
          <td><%= video.updated_at %></td>
          <td> <%= button_to 'Delete', youtube_video_path(video), method: :delete %> </td>
        <tr>
      <% end %>
    </tbody>
  </table>

</div>
